<p id="notice"><%= notice %></p>

<p>
  <h1>My Projects</h1>
</p>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @projects.blank? %>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to_if current_user.admin?, 'Edit', edit_project_path(project) %></td>
          <td><%= link_to_if current_user.admin?, 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <%else%>
     <tr>
        <th colspan="5">
          <p></p>You are yet not allocated to any of the project.</p>
        </th>
     </tr>
    <% end %>
    <tr>
       <td colspan="5"><%= link_to_if current_user.admin?, 'New Project', new_project_path %></td>
    </tr>
  </tbody>
</table>

 


